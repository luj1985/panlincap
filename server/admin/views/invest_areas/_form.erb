<% error = @invest_area.errors.include?(:order) %>
<fieldset class='form-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :order, :class => 'control-label col-sm-2' %>
  <div class='controls col-sm-10'>
    <%= f.text_field :order, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:order) : "" %></span>
  </div>
</fieldset>

