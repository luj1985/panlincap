<% content_for :javascripts do %>
  <%= javascript_include_tag 'froala_editor.min' %>
  <%= javascript_include_tag 'langs/zh_cn' %>
  
  <%= javascript_include_tag 'plugins/lists.min' %>
  <%= javascript_include_tag 'plugins/tables.min' %>
  <%= javascript_include_tag 'plugins/urls.min' %>
  <%= javascript_include_tag 'plugins/colors.min' %>

  <%= javascript_include_tag 'multi-lang' %>
  <%= javascript_include_tag 'declarations-editor' %>
<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'font-awesome.min' %>
  <%= stylesheet_link_tag 'froala_editor.min' %>
  <%= stylesheet_link_tag 'froala_style.min' %>
<% end %>


<% error = @declaration.errors.include?(:name) %>
<fieldset class='form-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :name, :class => 'control-label col-sm-2' %>
  <div class='controls col-sm-10'>
    <%= f.text_field :name, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:name) : "" %></span>
  </div>
</fieldset>

<% error = @declaration.errors.include?(:description) %>
<fieldset class='form-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :description, :class => 'control-label col-sm-2' %>
  <div class='controls col-sm-10'>
    <%= f.text_field :description, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:description) : "" %></span>
  </div>
</fieldset>



<div>

<ul id='multi-lang' class='nav nav-tabs' role='tablist'>
  <li role='presentation' class='active'><a href="#zh" aria-controls='zh' role='tab' data-toggle='tab'>中文</a></li>
  <li role='presentation'><a href="#en" aria-controls='en' role='tab' data-toggle='tab'>English</a></li>
</ul>




<div class='tab-content'>
  <p></p>
  <div role='tabpanel' class='tab-pane active' id='zh'>

    <% error = @declaration.errors.include?(:title) %>
    <fieldset class='form-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :title, :class => 'control-label col-sm-2' %>
      <div class='controls col-sm-10'>
        <%= f.text_field :title, :class => 'form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:title) : "" %></span>
      </div>
    </fieldset>

    <% error = @declaration.errors.include?(:body) %>
    <fieldset class='form-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :body, :class => 'control-label col-sm-2' %>
      <div class='controls col-sm-10'>
        <%= f.text_area :body, :rows => 10, :class => 'form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:body) : "" %></span>
      </div>
    </fieldset>
  </div>



  <div role='tabpanel' class='tab-pane' id='en'>
    <% error = @declaration.errors.include?(:title_en) %>
    <fieldset class='form-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :title_en, :class => 'control-label col-sm-2' %>
      <div class='controls col-sm-10'>
        <%= f.text_field :title_en, :class => 'form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:title_en) : "" %></span>
      </div>
    </fieldset>

    <% error = @declaration.errors.include?(:body_en) %>
    <fieldset class='form-group <%= error ? 'has-error' : ''%>'>
      <%= f.label :body_en, :class => 'control-label col-sm-2' %>
      <div class='controls col-sm-10'>
        <%= f.text_area :body_en, :rows => 10, :class => 'form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:body_en) : "" %></span>
      </div>
    </fieldset>
  </div>


</div>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:declarations, :index), :class => 'btn btn-default' %>
</div>