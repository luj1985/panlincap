<ul class="news"></ul>
<div class="pagination">
  {{#if hasPrev}}
    <a href="#/news/{{category}}?page={{firstPage}}{{#if keyword}}&q={{keyword}}{{/if}}" class="first">首页</a>
    <a href="#/news/{{category}}?page={{prevPage}}{{#if keyword}}&q={{keyword}}{{/if}}" class="prev">上一页</a>
  {{else}}
    <span class="first disabled">首页</span>
    <span class="prev disabled">上一页</span>
  {{/if}}
  <span class="current">第 {{currentPage}} / {{totalPage}} 页</span>
  <div class="goto">
    <input type="number" class="num" min="{{firstPage}}" max="{{lastPage}}" />
    <button class="jump">跳转</button>
  </div>
  {{#if hasNext}}
  <a href="#/news/{{category}}?page={{nextPage}}{{#if keyword}}&q={{keyword}}{{/if}}" class="next">下一页</a>
  <a href="#/news/{{category}}?page={{lastPage}}{{#if keyword}}&q={{keyword}}{{/if}}" class="last">尾页</a>
  {{else}}
  <span class="next disabled">下一页</span>
  <span class="last disabled">尾页</span>
  {{/if}}
</div>
<div class="vertical pagination">
  <a href="#" class="scroll up"><i class="fa fa-chevron-circle-up"></i></a>
  <a href="#" class="scroll down"><i class="fa fa-chevron-circle-down"></i></a>
</div>
